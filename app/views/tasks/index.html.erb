<h1 class="mb-4">Task List</h1>

<table class="table table-bordered table-striped">
  <thead class="table-dark">
    <tr>
      <th>Title</th>
      <th>Completed</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= link_to task.title, task_path(task), class: "text-decoration-none" %></td>
        <td>
          <% if task.completed %>
            <span class="text-success">✅ Completed</span>
          <% else %>
            <span class="text-danger">❌ Not Completed</span>
          <% end %>
        </td>
        <td>
          <%= link_to "Edit", edit_task_path(task), class: "btn btn-sm btn-primary" %>
          <%= link_to "Delete", task_path(task), method: :delete, class: "btn btn-sm btn-danger", data: { confirm: "Are you sure?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Add New Task", new_task_path, class: "btn btn-success" %>
